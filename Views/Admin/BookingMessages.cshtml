@model List<MovieBookingSystem.Models.Booking>

@{
    ViewData["Title"] = "Booking Messages";
}

<div class="container">
    <h2>Recent Booking Notifications</h2>
    <p class="text-muted">Showing bookings from last 24 hours</p>

    @if (Model.Any())
    {
        <div class="row">
            @foreach (var booking in Model)
            {
                <div class="col-md-6 mb-3">
                    <div class="card @(booking.BookingDate.Date == DateTime.Today ? "border-success" : "")">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-start">
                                <h5 class="card-title">New Booking!</h5>
                                <span class="badge bg-success">@booking.Status</span>
                            </div>
                            <p class="card-text">
                                <strong>User:</strong> @booking.User.Name<br>
                                <strong>Movie:</strong> @booking.Showtime.Movie.Title<br>
                                <strong>Theater:</strong> @booking.Showtime.Theater<br>
                                <strong>Showtime:</strong> @booking.Showtime.ShowDateTime.ToString("MMM dd, yyyy hh:mm tt")<br>
                                <strong>Tickets:</strong> @booking.NumberOfTickets<br>
                                <strong>Amount:</strong> @booking.TotalAmount.ToString("C")<br>
                                <strong>Reference:</strong> @booking.BookingReference<br>
                                <strong>Booked On:</strong> @booking.BookingDate.ToString("MMM dd, yyyy hh:mm tt")
                            </p>
                            <div class="text-end">
                                <small class="text-muted">
                                    @if (booking.BookingDate.Date == DateTime.Today)
                                    {
                                        <span class="text-success">Today</span>
                                    }
                                    else
                                    {
                                        @booking.BookingDate.ToString("MMM dd")
                                    }
                                </small>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="alert alert-info">
            <h5>No recent bookings</h5>
            <p>There are no new booking notifications in the last 24 hours.</p>
        </div>
    }

    <div class="mt-3">
        <a href="@Url.Action("AdminDashboard")" class="btn btn-secondary">Back to Dashboard</a>
        <a href="@Url.Action("AllBookings")" class="btn btn-primary">View All Bookings</a>
    </div>
</div>