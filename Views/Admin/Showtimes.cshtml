@model List<MovieBookingSystem.Models.Showtime>

@{
    ViewData["Title"] = "Manage Showtimes";
}

<div class="container">
    <h2><i class="fas fa-clock"></i> Manage Showtimes</h2>

    <div class="d-flex justify-content-between mb-3">
        <a href="@Url.Action("AddShowtime")" class="btn btn-primary">
            <i class="fas fa-plus"></i> Add New Showtime
        </a>
        <div>
            <span class="badge bg-success">Active: @Model.Count(s => s.IsActive)</span>
            <span class="badge bg-secondary ms-2">Inactive: @Model.Count(s => !s.IsActive)</span>
        </div>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info">
            <h4><i class="fas fa-info-circle"></i> No showtimes found!</h4>
            <p>No showtimes have been added yet. <a href="@Url.Action("AddShowtime")" class="alert-link">Add a showtime</a> to get started.</p>
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>Movie</th>
                        <th>Theater</th>
                        <th>Date & Time</th>
                        <th>Seats</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var showtime in Model)
                    {
                        <tr>
                            <td>@showtime.Movie?.Title</td>
                            <td>@showtime.Theater</td>
                            <td>@showtime.ShowDateTime.ToString("MMM dd, yyyy hh:mm tt")</td>
                            <td>
                                <span class="badge @(showtime.AvailableSeats > 20 ? "bg-success" : showtime.AvailableSeats > 5 ? "bg-warning" : "bg-danger")">
                                    @showtime.AvailableSeats / @showtime.TotalSeats
                                </span>
                            </td>
                            <td>
                                <span class="badge bg-@(showtime.IsActive ? "success" : "danger")">
                                    @(showtime.IsActive ? "Active" : "Inactive")
                                </span>
                            </td>
                            <td>
                                <div class="btn-group" role="group">
                                    <!-- Toggle Status Button -->
                                    <form asp-action="ToggleShowtimeStatus" method="post" class="d-inline">
                                        @Html.AntiForgeryToken()
                                        <input type="hidden" name="id" value="@showtime.Id" />
                                        <button type="submit" class="btn btn-sm @(showtime.IsActive ? "btn-secondary" : "btn-success")"
                                                title="@(showtime.IsActive ? "Deactivate" : "Activate")">
                                            <i class="fas @(showtime.IsActive ? "fa-eye-slash" : "fa-eye")"></i>
                                        </button>
                                    </form>
                                    
                                    <!-- Delete Button -->
                                    <form asp-action="DeleteShowtime" method="post" class="d-inline">
                                        @Html.AntiForgeryToken()
                                        <input type="hidden" name="id" value="@showtime.Id" />
                                        <button type="submit" class="btn btn-sm btn-danger"
                                                onclick="return confirm('Are you sure you want to delete this showtime?')"
                                                title="Delete Showtime">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>