@model List<MovieBookingSystem.Models.Booking>

@{
    ViewData["Title"] = "All Bookings";
}

<div class="container">
    <h2><i class="fas fa-ticket-alt"></i> All Bookings</h2>

    @if (!Model.Any())
    {
        <div class="alert alert-info">
            <h4><i class="fas fa-info-circle"></i> No bookings found!</h4>
            <p>No bookings have been made yet.</p>
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>Booking Ref</th>
                        <th>User</th>
                        <th>Movie</th>
                        <th>Theater</th>
                        <th>Show Time</th>
                        <th>Tickets</th>
                        <th>Amount</th>
                        <th>Status</th>
                        <th>Booking Date</th>
                        <th>Seats</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var booking in Model)
                    {
                        <tr>
                            <td><strong>@booking.BookingReference</strong></td>
                            <td>@booking.User.Name</td>
                            <td>@booking.Showtime.Movie.Title</td>
                            <td>@booking.Showtime.Theater</td>
                            <td>@booking.Showtime.ShowDateTime.ToString("MMM dd, yyyy hh:mm tt")</td>
                            <td>@booking.NumberOfTickets</td>
                            <td>₹@booking.TotalAmount</td>
                            <td>
                                <span class="badge bg-@(booking.Status == "Confirmed" ? "success" : "warning")">
                                    @booking.Status
                                </span>
                            </td>
                            <td>@booking.BookingDate.ToString("MMM dd, yyyy hh:mm tt")</td>
                            <td>@booking.Seats</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <div class="mt-3">
            <div class="alert alert-info">
                <h5><i class="fas fa-chart-pie"></i> Booking Statistics</h5>
                <p>Total Bookings: <strong>@Model.Count</strong></p>
                <p>Confirmed Bookings: <strong>@Model.Count(b => b.Status == "Confirmed")</strong></p>
                <p>Cancelled Bookings: <strong>@Model.Count(b => b.Status == "Cancelled")</strong></p>
                <p>Total Revenue: <strong>₹@Model.Where(b => b.Status == "Confirmed").Sum(b => b.TotalAmount)</strong></p>
            </div>
        </div>
    }
</div>