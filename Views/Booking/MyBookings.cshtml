@model List<MovieBookingSystem.Models.Booking>

@{
    ViewData["Title"] = "My Bookings";
}

<div class="container">
    <h2><i class="fas fa-ticket-alt"></i> My Bookings</h2>

    @if (!Model.Any())
    {
        <div class="alert alert-info">
            <h4><i class="fas fa-info-circle"></i> No bookings found!</h4>
            <p>You haven't made any bookings yet. <a href="@Url.Action("Index", "Home")" class="alert-link">Browse movies</a> to book tickets.</p>
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>Booking Reference</th>
                        <th>Movie</th>
                        <th>Theater</th>
                        <th>Show Time</th>
                        <th>Tickets</th>
                        <th>Amount</th>
                        <th>Status</th>
                        <th>Booking Date</th>
                        <th>Seats</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var booking in Model)
                    {
                        <tr>
                            <td><strong>@booking.BookingReference</strong></td>
                            <td>@booking.Showtime?.Movie?.Title</td>
                            <td>@booking.Showtime?.Theater</td>
                            <td>@booking.Showtime?.ShowDateTime.ToString("MMM dd, yyyy hh:mm tt")</td>
                            <td>@booking.NumberOfTickets</td>
                            <td>₹@booking.TotalAmount.ToString("0")</td>
                            <td>
                                <span class="badge bg-@(booking.Status == "Confirmed" ? "success" : "warning")">
                                    @booking.Status
                                </span>
                            </td>
                            <td>@booking.BookingDate.ToString("MMM dd, yyyy hh:mm tt")</td>
                            <td>@booking.Seats</td>
                            <td>
                                @if (booking.Status == "Confirmed" && booking.Showtime?.ShowDateTime > DateTime.Now)
                                {
                                    <form asp-action="CancelBooking" method="post" class="d-inline">
                                        @Html.AntiForgeryToken()
                                        <input type="hidden" name="id" value="@booking.Id" />
                                        <button type="submit" class="btn btn-sm btn-danger" 
                                                onclick="return confirm('Are you sure you want to cancel this booking?')">
                                            <i class="fas fa-times"></i> Cancel
                                        </button>
                                    </form>
                                }
                                <a href="@Url.Action("BookingConfirmation", new { id = booking.Id })" 
                                   class="btn btn-sm btn-info">
                                    <i class="fas fa-eye"></i> Details
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <div class="mt-3">
            <div class="alert alert-success">
                <h5><i class="fas fa-chart-bar"></i> Booking Summary</h5>
                <p>Total Bookings: <strong>@Model.Count</strong></p>
                <p>Confirmed Bookings: <strong>@Model.Count(b => b.Status == "Confirmed")</strong></p>
                <p>Total Spent: <strong>₹@Model.Where(b => b.Status == "Confirmed").Sum(b => b.TotalAmount).ToString("0")</strong></p>
            </div>
        </div>
    }
</div>