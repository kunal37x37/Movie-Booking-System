@{
    ViewData["Title"] = "Login";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header bg-primary text-white">
                <h3 class="text-center mb-0"><i class="fas fa-sign-in-alt"></i> Login to Your Account</h3>
            </div>
            <div class="card-body">
                <form asp-action="Login" method="post">
                    @Html.AntiForgeryToken()
                    
                    <div class="form-group mb-3">
                        <label for="email" class="form-label">
                            <i class="fas fa-envelope"></i> Email Address
                        </label>
                        <input type="email" class="form-control" id="email" name="email" required 
                               placeholder="Enter your email">
                    </div>
                    
                    <div class="form-group mb-3">
                        <label for="password" class="form-label">
                            <i class="fas fa-lock"></i> Password
                        </label>
                        <input type="password" class="form-control" id="password" name="password" required 
                               placeholder="Enter your password">
                    </div>
                    
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary w-100 btn-lg">
                            <i class="fas fa-sign-in-alt"></i> Login
                        </button>
                    </div>
                </form>
                
                <div class="text-center mt-3">
                    <p>Don't have an account? 
                        <a href="@Url.Action("Register", "Account")" class="text-decoration-none">
                            Register here
                        </a>
                    </p>
                </div>

                <div class="mt-4 p-3 bg-light rounded">
                    <h6>Demo Accounts:</h6>
                    <p class="mb-1"><strong>Admin:</strong> rajhans@gmail.com / abc123</p>
                    <p class="mb-0"><strong>User:</strong> apple@gmail.com / abc123</p>
                </div>
            </div>
        </div>
    </div>
</div>